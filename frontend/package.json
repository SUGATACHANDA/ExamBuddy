{
  "name": "exambuddy",
  "version": "1.0.0",
  "productName": "Exam Buddy",
  "author": {
    "name": "SUGATA CHANDA",
    "email": "scbabai2704@gmail.com",
    "url": "https://sugatachanda.vercel.app"
  },
  "private": true,
  "description": "A secure, hierarchical exam proctoring application for educational institutions",
  "license": "UNLICENSED",
  "main": "public/electron-prod.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "ajv": "^8.17.1",
    "axios": "^1.11.0",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.544.0",
    "node-powershell": "^5.0.1",
    "ps-list": "^8.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.8.2",
    "react-scripts": "5.0.1",
    "socket.io-client": "^4.8.1",
    "use-immer": "^0.11.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "postbuild": "node ./postbuild.js",
    "rebuild": "electron-rebuild -f -w your-module",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:start": "npx concurrently -k \"npm run start\" \"npx wait-on http://localhost:3000 && npx electron .\"",
    "electron:package": "npx dotenv -e ./.env -- npm run build && npm run clean:fsevents && npm run postbuild && electron-builder",
    "publish": "npx dotenv -e ./.env -- npm run electron:package -- --publish always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "dotenv-cli": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "fs-extra": "^11.3.1",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.exambuddy.app",
    "productName": "Exam Buddy",
    "copyright": "Copyright Â© 2025 SUGATA CHANDA",
    "publish": {
      "provider": "github",
      "owner": "SUGATACHANDA",
      "repo": "ExamBuddy"
    },
    "asar": false,
    "npmRebuild": false,
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "!node_modules/fsevents/**/*",
      "public/electron.js",
      "public/preload.js"
    ],
    "extraMetadata": {
      "main": "build/electron.js"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "artifactName": "${productName}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "overrides": {
    "fsevents": "2.3.2"
  }
}
