{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "backend/assets/font/**"
      }
    }
  ],

  "functions": {
    "api/**/*.js": {
      "bodyParser": false
    }
  },

  "routes": [
    {
      "src": "/api/exams/countdown/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/api/socket.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/server.js"
    }
  ]
}
